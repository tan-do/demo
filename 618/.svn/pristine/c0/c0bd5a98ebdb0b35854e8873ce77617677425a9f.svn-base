/*更多会场*/
function toOpenHc() {
    if($('.hc-more').is(':hidden')){
        $('.hc-more').slideDown(300);
    }else{
        $('.hc-more').slideUp(300);
    }
}



function toShare() {
    if($('#share').is(':hidden')){
        $('.share-bg').show();
        $('#share').slideDown(300);
    }else{
        $('.share-bg').hide();
        $('#share').slideUp(300);
    }
}

